{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "black": "#262B44",
    "blue": "#4B95E9",
    "green": "#59C9A5",
    "grey": "#A1A3AC",
    "lightgreen": "#95C463",
    "lightyellow": "#DBC074",
    "orange": "#F07623",
    "red": "#D81E5B",
    "snowblue": "#76ADCC",
    "violet": "#BD93F9",
    "white": "#E0DEF4",
    "yellow": "#F8B34E"
  },
  "secondary_prompt": {
    "template": " ",
    "foreground": "p:black",
    "background": "transparent"
  },
  "transient_prompt": {
    "template": "❯",
    "background": "transparent",
    "foreground_templates": [
      "{{ if gt .Code 0 }}p:red{{else}}p:violet{{ end }}"
    ]
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " \udb82\ude37 ",
          "background": "transparent",
          "type": "session",
          "style": "plain",
          "foreground_templates": [
            "{{ if gt .Code 0 }}p:red{{else}}p:yellow{{ end }}"
          ]
        },
        {
          "properties": {
            "cache_duration": "none",
            "style": "full",
            "template": "{{ .Path }}"
          },
          "foreground": "p:snowblue",
          "background": "transparent",
          "type": "path",
          "style": "plain"
        },
        {
          "properties": {
            "branch_max_length": 25,
            "cache_duration": "none",
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "template": " {{ if .UpstreamURL }}{{ url .UpstreamIcon .UpstreamURL }} {{ end }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }} ",
          "foreground": "p:lightgreen",
          "powerline_symbol": "\ue0b0",
          "background": "transparent",
          "type": "git",
          "style": "powerline",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}p:red{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}p:orange{{ end }}",
            "{{ if gt .Ahead 0 }}p:orange{{ end }}"
          ]
        }
      ],
      "newline": true
    },
    {
      "type": "rprompt",
      "segments": [
        {
          "properties": {
            "cache_duration": "none",
            "display_mode": "environment",
            "fetch_version": false,
            "fetch_virtual_env": false
          },
          "template": "(venv) ",
          "foreground": "p:violet",
          "background": "transparent",
          "type": "python",
          "style": "plain"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " {{ if ne .Shell \"zsh\" }}{{ .Name }}{{ end }} ",
          "foreground": "p:violet",
          "background": "transparent",
          "type": "shell",
          "style": "plain"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": "{{if ne .Type \"unknown\"}}  \uf313 nix-{{.Type}} {{end}}",
          "foreground": "p:violet",
          "background": "transparent",
          "type": "nix-shell",
          "style": "powerline"
        },
        {
          "properties": {
            "always_enabled": true,
            "cache_duration": "none",
            "style": "austin",
            "threshold": 500
          },
          "template": "{{ .FormattedMs }} ",
          "foreground": "p:grey",
          "background": "transparent",
          "type": "executiontime",
          "style": "plain"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " ❯ ",
          "background": "transparent",
          "type": "text",
          "style": "plain",
          "foreground_templates": [
            "{{ if gt .Code 0 }}p:red{{else}}p:violet{{ end }}"
          ]
        }
      ],
      "newline": true
    }
  ],
  "version": 3,
  "final_space": true
}
